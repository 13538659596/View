<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 名字最好是自定义View的类名 -->
	<declare-styleable name="MyTextView">
	    <!-- name 属性的名字， 
	    format 格式
	    string  			文字
	    dimension  			字体
	    integer				数字
	    reference			资源文件
	    color				颜色
	       -->
	   <attr name ="mytext" format="string"/>
	   <attr name ="mytextColor" format="color"/>
	   <attr name ="mytextSize" format="dimension"/>
	   <attr name ="mymaxLength" format="integer"/>
	   <attr name ="mybackground" format="reference|color"/>
	   
	   <!-- 枚举 -->
	   <attr name ="myInputType" >
	       <enum name="number" value="1"></enum>
	       <enum name="text" value="2"></enum>
	       <enum name="password" value="3"></enum>
	   </attr>
	</declare-styleable>
	
	
	<declare-styleable name="CircleText">
	    <!-- name 属性的名字， 
	    format 格式
	    string  			文字
	    dimension  			字体
	    integer				数字
	    reference			资源文件
	    color				颜色
	       -->
	   <attr name ="circText" format="string"/>
	   <attr name ="circTextColor" format="color"/>
	   <attr name ="circTextSize" format="dimension"/>
	   <attr name ="circBordeWidth" format="dimension"/>
	   <attr name ="circTextLength" format="integer"/>
	   <attr name ="circTextbackground" format="reference|color"/>
	</declare-styleable>


	<declare-styleable name="ColorText">
		<attr name ="normalColor" format="color"/>
		<attr name ="changeColor" format="color"/>
	</declare-styleable>

	<declare-styleable name="RatingBarView">
		<attr name ="normalPic" format="reference"/>
		<attr name ="selectPic" format="reference"/>
		<attr name ="startNumber" format="integer"/>
	</declare-styleable>

	<declare-styleable name="TasksCompletedView">
		<attr name="radius" format="dimension"/>
		<attr name="strokeWidth" format="dimension"/>
		<attr name="circleColor" format="color"/>
		<attr name="ringColor" format="color"/>
		<attr name="ringBgColor" format="color"/>
	</declare-styleable>

</resources>